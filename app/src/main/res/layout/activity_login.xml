<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_app_logo"
        android:adjustViewBounds="true"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_welcome_text"
        android:fontFamily="@font/pyidaungsu_bold"
        android:textSize="@dimen/font_size_title"
        android:textColor="@color/colorWelcome"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_below="@+id/imgLogo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bottom_sheet_bg"
        android:layout_alignParentBottom="true"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_welcome_text"
            android:fontFamily="@font/lobster_regular"
            android:textSize="@dimen/fonts_18_size"
            android:textColor="@color/white"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_8"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:text="@string/str_get_started"
            android:textSize="@dimen/fonts_18_size"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/pyidaungsu_bold"
            android:background="@drawable/getstarted_bg"/>

        <Button
            android:id="@+id/btnWelcome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:text="@string/str_login"
            android:textSize="@dimen/fonts_18_size"
            android:textAllCaps="false"
            android:textColor="@color/colorWelcome"
            android:layout_marginTop="@dimen/margin_22"
            android:fontFamily="@font/pyidaungsu_bold"
            android:background="@drawable/login_bg"/>

    </LinearLayout>

</RelativeLayout>